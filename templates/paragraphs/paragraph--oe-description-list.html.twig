{#
/**
 * @file
 * Theme override to display the 'Description list' type paragraph.
 *
 * @see ./modules/contrib/paragraphs/templates/paragraph.html.twig
 */
#}
{% block paragraph %}
  {% if title is not empty %}
    <h2 class="ecl-u-type-heading-2">
      {{ title }}
    </h2>
  {% endif %}
  {% block content %}
    {% if items %}
      {{ pattern('field_list', {
        variant: 'horizontal',
        items: items,
      }) }}
    {% endif %}
  {% endblock %}
{% endblock paragraph %}
